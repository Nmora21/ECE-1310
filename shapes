// shapes.cpp : This file contains the 'main' function. Program execution begins and ends there.

#include <iostream>
using namespace std;

int main()
{
    for (int j = 1; j <= 7; j++)
    {
        for (int i = 1; i <= j; i++)
        {
            cout << "*";
        }
        cout << endl;
    }
    for (int j = 7; j >= 1; j--)
    {
        for (int i = 1; i <= j; i++)
        {
            cout << "*";
        }
        cout << endl;
    }
    for (int j = 1; j <= 7; j++)
    {
        for (int b = j - 1; b <= 7; b++)
            cout << " ";
        for (int i = 1; i <= j; i++)
        {
            cout << "*";
        }
        cout << endl;
    }

   
}
