// Arrays.cpp : This file contains the 'main' function. Program execution begins and ends there.

#include <iostream>
using namespace std;

int main()
{
    int n[10];
    double sum = 0;
    double average = 0;
    for (int i = 0; i < 10; i++)
    {
        n[i] = 30 + rand() % 71; //random number from [30,100]
        cout << n[i] << ", ";
        sum = sum + n[i];
    }
    average = sum / 10;
    cout << "\n The average score is: " << average;
}
